<%- include("header") %>

<section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6 ">
        <div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Courses</h2>
            <p class="font-light text-gray-500 lg:mb-16 sm:text-xl dark:text-gray-400">Explore the whole collection of open-source courses available for you to learn the concepts</p>
        </div> 
        <div class="grid gap-8 mb-6 lg:mb-16 md:grid-cols-2">
            <!-- ========== Single Course Block ========== -->
            
            <% for(var i = 0; i<courses.length; i++){ %> 

            <div class="items-center bg-gray-50 rounded-lg shadow sm:flex dark:bg-gray-800 dark:border-gray-700">
                <a href="#">
                    <img class="w-full rounded-lg sm:rounded-none sm:rounded-l-lg" src="<%= courses[i].image %>" alt="Bonnie Avatar">
                </a>
                <div class="p-5">
                    <h3 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
                        <a href="#"><%= courses[i].name %></a>
                    </h3>
                    <span class="text-gray-500 dark:text-gray-400"></span>
                    <p class="mt-3 mb-4 font-light text-gray-500 dark:text-gray-400"><%= courses[i].desc %></p>
                    <form action="/courses/<%= courses[i].name %>" method="get">
                        <input type="hidden" value="<%= username %>" name="username">
                        <button onclick="submit" type="submit" class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900" name="room" value="<%= courses[i].name %>">Learn Now</button>
                    </form>
                    </div>
            </div> 

            <% } %> 
            <!-- ========== Single Course Block End ========== -->  
        </div>  
    </div>
  </section>

<%- include("footer") %>